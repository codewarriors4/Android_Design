<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/hm_pack_title_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/hm_pack_desc_listview"
                android:layout_width="288dp"
                android:layout_height="56dp"
                android:layout_alignStart="@+id/hm_pack_title_listview"
                android:layout_alignTop="@+id/hm_edit_pack"
                android:padding="5dp"
                android:text="TextView" />

            <Button
                android:id="@+id/hm_edit_pack"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/hm_pack_cost"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:drawableLeft="@android:drawable/ic_menu_edit" />

            <TextView
                android:id="@+id/hm_pack_cost"
                android:layout_width="248dp"
                android:layout_height="29dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/hm_pack_cost_label"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="88dp"
                android:padding="5dp" />

            <TextView
                android:id="@+id/hm_pack_cost_label"
                android:layout_width="72dp"
                android:layout_height="29dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/hm_pack_title_listview"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="102dp"
                android:padding="5dp"
                android:text="Price :" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>