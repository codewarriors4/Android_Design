<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <EditText
        android:id="@+id/first_name_tiffin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="FirstName"
        android:inputType="textPersonName"
        android:textColor="@color/black"/>


    <EditText
        android:id="@+id/last_name_tiffin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Lastname"
        android:inputType="textPersonName"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/phone_tiffin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Phone"
        android:inputType="phone"
        android:textColor="@color/black"
        android:maxLength="10"/>

    <EditText
        android:id="@+id/street_name_tiffin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Street Name"
        android:inputType="text"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/city_tiffin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="City"
            android:inputType="text"
            android:textColor="@color/black" />

        <Spinner
            android:id="@+id/province_spinner_tiffin"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:entries="@array/Province_arrays"
            android:prompt="@string/Province_prompt"
            tools:layout_editor_absoluteX="182dp"
            tools:layout_editor_absoluteY="11dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/country_spinner_tiffin"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:entries="@array/countries_array"
            android:prompt="@string/country_prompt"
            tools:layout_editor_absoluteX="182dp"
            tools:layout_editor_absoluteY="11dp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/zipcode_tiffin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Zipcode"
            android:textColor="@color/black" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/blue"
        android:elevation="4dp"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:text="Submit"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/submit_tiffin"/>

</LinearLayout>
